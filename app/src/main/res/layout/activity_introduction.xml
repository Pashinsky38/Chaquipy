<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Introduction">

    <!-- Title of the introduction -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="Introduction to Python"
        tools:ignore="HardcodedText" />

    <!-- Description of Python -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="356dp"
        android:layout_height="388dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/python_description" />


    <Button
        android:id="@+id/ttsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Text to Speech"
        tools:ignore="HardcodedText" />

    <!-- Next button to BasicsFragment-->
    <Button
        android:id="@+id/introductionToBasics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Next"
        tools:ignore="HardcodedText" />

    <!-- FrameLayout for BasicsFragment -->
    <FrameLayout
        android:id="@+id/fragment_basics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center" />

    <!-- FrameLayout for VariablesFragment -->
    <FrameLayout
        android:id="@+id/fragment_variables"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- FrameLayout for BasicsPracticeFragment -->
    <FrameLayout
        android:id="@+id/fragment_basics_practice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:visibility="gone" />
</LinearLayout>