<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_start"
    tools:context=".VariablesFragment">

    <ScrollView
        android:id="@+id/scrollViewVariables"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/variables_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="Variables in Python"
                android:textColor="#FFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/variables_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="Variables are used to store data. You can think of them as containers that hold values. To create a variable, you choose a name and assign a value to it using the '=' operator."
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/variables_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:text="name = 'Libby'\nage = 30\nprint(name)\nprint(age)"
                android:textColor="#FFFF"
                android:textSize="18sp"
                android:textStyle="italic"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/variables_rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="Variable names must start with a letter or an underscore, and can contain letters, numbers, and underscores. They are case-sensitive."
                android:textColor="#FFFF"
                android:textSize="16sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/variables_rules_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:text="valid_name = 10\n_another_valid_name = 'Hello'\nmyVariable123 = True\n\n# Invalid:\n# 123variable = 5 (starts with a number)\n# my-variable = 'test' (contains a hyphen)"
                android:textColor="#FFFF"
                android:textSize="18sp"
                android:textStyle="italic"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/code_editor_variables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Python code here"
                android:inputType="textMultiLine"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                tools:ignore="Autofill,HardcodedText" />

            <Button
                android:id="@+id/run_code_button_variables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Run Code"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/output_text_variables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFF"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layoutDirection="ltr"
                android:textDirection="ltr"/>

            <Button
                android:id="@+id/goToPracticeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Go to Practice"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>